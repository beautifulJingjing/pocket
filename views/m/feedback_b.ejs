<%- include include/index/head-index.ejs %>
<style type="text/css">
.feedbox{ width:92%; margin:0 auto; padding:1rem 0; line-height:2rem;}
.feedbox textarea,.feedbox input{font-size: .65rem}
.feedbox textarea{ display:block; width:95.5%; height:4rem; border:.05rem solid #bbb; border-radius:.35rem; padding:2%; font-family:"Microsoft yahei";}
.feedbox input{ display:block; height:1.8rem; margin-top:.5rem; border-radius:.35rem; border:.05rem solid #bbb; font-family:"Microsoft yahei";}
.feedbox input[type="text"]{ width:95.5%; padding:2%;}
.feedbox input[type="button"]{ width:100%; height:2.5rem; background:#ff4a00; color:#fff; text-align:center; border:.05rem solid #ff4a00;}
.feedbox input[type="button"]:hover{ background:#db4609; border:1px solid #db4609;}
</style>
<div class="main">
  <div class="feedbox">
    <textarea placeholder="输入您反馈的内容"></textarea>
    <input type="text" placeholder="手机号/QQ号/电子邮箱" />
    <input type="button" value="提交" />
  </div>
</div>
<script>
  var _fb_wait = setInterval(function () {
    if(diring_index_state) {
      clearInterval(_fb_wait);

      var btnFeeback = $('.feedbox input[type="button"]');
      function feebackSubmit() {
        var data = {
          cmd: 'feedback',
          ver: app.spinfocode,
          content: $('.feedbox input[type="text"]').val().trim()+':'+$('.feedbox textarea').val().trim(),
          user: $('.feedbox input[type="text"]').val().trim()
        };
        if (data.content == '') {
          alert('请输入您的反馈内容！');
          return;
        }
        if (data.user == '') {
          alert('请输入您的手机号/QQ号/电子邮箱！');
          return;
        }
        $.ajax({
          url: "/proxy/v3/proxy.aspx",
          data: data,
          dataType: 'json',
          cache: false,
          type: 'post',
          beforeSend: function () { mbox.waiting('提交中,请稍候……'); },
          success: function (r) {
            if (r.s == 1) {
                mbox.alertMsg({
                    explain: "您反馈的内容我们已收到",
                    confirmEvent: function () {
                        $('.feedbox textarea').val('');
                        $('.feedbox input[type="text"]').val('');
                        mbox.close();
                    }
                });
            }
            else if (r.msg) alert(r.msg);
            else  mbox.close();
          }
        });
      }
      if (app.user.logined()) $('.feedbox input[type="text"]').val(app.user.phone);
      btnFeeback.click(feebackSubmit);
    }
  }, 50);
</script>
