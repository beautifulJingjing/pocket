<link href="/m/stylesheets/pop/1.css" type="text/css" rel="stylesheet">
<div class="main">
    <div><img src="/m/images/1/ban-pay-1.png"></div>
    <div class="ban2">
        <img src="/m/images/1/ban-pay-2.png">
        <div class="get-layer">
            <div class="getbtn-inner"><img src="/m/images/1/btn-new.png"> </div>
        </div>
    </div>
    <div class="get-num"></div>
    <div class="rule-layer">
        <div class="rule-tit">福利说明</div>
        <ul></ul>
    </div>
    <div class="ring-layer">
        <div class="tit-sm">2016年最新最热的铃声都在这里↓</div>
        <div class="ring-list"></div>
        <div class="loadmore"><div class="loadmore-inner"><i class="icon-font iconfont-load"></i><span>点击加载更多</span></div></div>
    </div>
</div>
<div id="ring-template" class="hide">
    <div class="musics clear">
        <div class="left-area">
            <em>{0}</em>
            <a href="javascript:void(0);" data-rid="{3}" data-sprid="{5}" class="controlbtn btn-play">暂停/播放</a>
        </div>
        <div class="pinfo">
            <div class="fr set">
                <a href="javascript:void(0);" data-rid="{3}" data-sprid="{5}" class="icon-font icon-color iconfont-ringSet btn-setring"></a>
                <a href="javascript:void(0);" data-rid="{3}" data-rname="{1}" class="icon-font icon-color iconfont-ringDown btn-download"></a>
            </div>
            <div>
                <a href="javascript:void(0);" class="btn-play">
                    <p class="name">{1}</p>
                    <p class="lh"><i class="icon-font icon-color iconfont-vip vip"></i><span>{2}</span></p>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="float-layer"><div class="float-getbtn"><img src="/m/images/1/btn-new.png"></div> </div>
<script>
    var _load_list_wait=setInterval(function(){if((diring_index_state)){clearInterval(_load_list_wait);$(window).on('scroll',function(){var float_layer=$('.float-layer');var float_layerH=float_layer.height()+"px";float_layer.css("top",-float_layerH);if(($('.get-layer').offset().top+$('.get-layer').height())<$(this).scrollTop())float_layer.animate({'opacity':1,'top':0},500);else float_layer.animate({'opacity':0,'top':-float_layerH},500)});$.ajax({url:"/proxy/v3/proxy.aspx",data:{cmd:"get-receivenum",spinfocode:app.spinfocode,modeltype:'1'},dataType:'json',cache:false,type:'get',success:function(r){if(r.s==1)$('.get-num').html('已有'+r.data+'人领取了福利')}});$('.rule-layer ul').append(app.pushinfo.declare.intro.content);$('.rule-layer ul').find('a').attr('href',app.pushinfo.declare.message.link);var more=$('.loadmore');function load_list(){var data={spinfocode:app.spinfocode,cmd:'get-ringlist',pid:app.pushinfo.hotlist.list[0].id,start:more.prev().children().length,records:10};$.ajax({url:"/proxy/v3/proxy.ahtml",data:data,dataType:'json',cache:true,type:'get',beforeSend:function(){more.off('click').children('span').text('正在加载……')},success:function(r){if(r.s==1){var template=$('#ring-template').html();for(var i in r.data.list){var d=r.data.list[i];var li=$(template.format(parseInt(i)+data.start+1,d.name,d.songer,d.ringid,d.coprinfo.cflag,d.springid));if(d.isnew=='1')li.find('.vip').before('<i class="new">新</i>');if(d.ishot=='1')li.find('.vip').before('<i class="hot">热</i>');if(app.spinfocode=='00000350311'||app.spinfocode=='00000350312'){li.find('.btn-download').hide()};li.find('.btn-play').click(app.doPlay);li.find('.btn-download').click(app.doDownload);li.find('.btn-setring').click(app.doSetRing);more.prev().append(li)};if(data.records>r.data.list.length)more.hide();else more.click(load_list).children('span').text('加载更多')}}})};load_list();$('.getbtn-inner, .float-getbtn').click(app.doOnServe)}},50);
</script>
